{
  "name": "@tradingcrypt.xyz/root",
  "displayName": "tradingcrypt.xyz",
  "version": "0.0.1",
  "workspaces": [
    "app",
    "backend"
  ],
  "scripts": {
    "build": "nx run-many -t build --parallel 10",
    "build:app": "nx build app",
    "build:backend": "nx build backend",
    "generate-types": "swagger-typescript-api -p http://localhost:3000/docs-json -o apps/app/src/services/api --modular --extract-enums --single-http-client --axios -n ./types.ts --type-prefix Api --clean-output",
    "kill": "lsof -i :8080 | awk 'FNR == 2 {print $2}' | xargs kill -9",
    "lint": "nx run-many -t lint,stylelint --parallel 10 && nx format:check --all",
    "lint:fix": "nx run-many -t lint:fix,stylelint:fix --parallel 10 && nx format:write --all",
    "serve:app": "nx serve app",
    "serve:backend": "nx serve backend",
    "test": "nx run-many -t test --parallel 10",
    "migrations:generate": "nx migrations:generate backend",
    "migrations:run": "nx migrations:run backend",
    "migrations:revert": "nx migrations:revert backend",
    "migrations:show": "nx migrations:show backend",
    "schema:drop": "nx schema:drop backend",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/core": "^10.3.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/swagger": "^7.3.1",
    "bcryptjs": "^2.4.3",
    "ccxt": "^4.3.32",
    "class-validator": "^0.14.1",
    "passport-jwt": "^4.0.1",
    "swagger-ui-express": "^5.0.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^19.0.0",
    "@nx/devkit": "19.1.0",
    "@nx/eslint": "19.1.0",
    "@nx/eslint-plugin": "19.1.0",
    "@nx/js": "19.1.0",
    "@nx/playwright": "19.1.0",
    "@nx/vite": "19.1.0",
    "@nx/vue": "19.1.0",
    "@nx/web": "19.1.0",
    "@nx/workspace": "19.1.0",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.8.0",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "@vue/eslint-config-prettier": "7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-vue": "^9.16.1",
    "jsdom": "~22.1.0",
    "nx": "19.1.0",
    "prettier": "^2.6.2",
    "sass": "1.62.1",
    "typescript": "~5.4.2",
    "vite": "~5.0.0",
    "vitest": "^1.3.1",
    "vue-tsc": "^1.8.8"
  }
}
